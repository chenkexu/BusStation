<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <view
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:id="@+id/ll_camera_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号: "
            android:textSize="15dp"/>

        <TextView
            android:text="1234567789"
            android:textStyle="bold"
            android:id="@+id/tv_camera_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_station_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginBottom="-10dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电站名称"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="15dp"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_pile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="电桩名称"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_pile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/tv_pile"
            android:layout_toLeftOf="@+id/iv_order_info_location"
            android:layout_toRightOf="@+id/tv_pile"
            android:singleLine="true"
            android:text="电桩名称"
            android:textColor="@color/text_black"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_pile_lo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pile"
            android:layout_marginTop="10dp"
            android:text="电桩位置"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_pile_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_pile_lo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_order_info_location"
            android:layout_toRightOf="@+id/tv_pile_lo"
            android:text="龙子湖小鱼"
            android:textColor="@color/text_black"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/iv_order_info_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/manage_dingwei"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="联系电话"
            android:textSize="15dp"/>

        <TextView
            android:text="18401512374"
            android:id="@+id/tv_tel_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_order_info_phone"
            android:layout_toRightOf="@+id/tv_tel"
            android:gravity="left"
            android:maxLines="2"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/iv_order_info_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/manage_phone"/>
    </RelativeLayout>

</LinearLayout>
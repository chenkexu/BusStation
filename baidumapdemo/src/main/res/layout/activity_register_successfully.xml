<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_white"
              android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/pay_success" />

        <TextView
            android:id="@+id/tv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/h10"
            android:text="绑定成功"
            android:textColor="@color/text_gray_dark"
            android:textSize="@dimen/h40" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="恭喜你加入站级监控app"
            android:textColor="@color/text_gray_dark"
            android:textSize="@dimen/h16" />

        <Button
            android:id="@+id/btn_charge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/w40"
            android:layout_marginRight="@dimen/w40"
            android:layout_marginTop="@dimen/h80"
            android:background="@drawable/d_btn_bg"
            android:padding="10dp"
            android:text="开始使用"
            android:textColor="@color/text_white"
            android:textSize="@dimen/h20" />
    </LinearLayout>

</LinearLayout>
<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控件的选中的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--签到页面的style-->
    <style name="layout_title">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--欢迎页面的主题-->
    <style name="AppWelcome" parent="AppTheme">
        <item name="android:windowBackground">@drawable/defaults</item>
        <!--Activity界面设置为透明-->
        <item name="android:windowIsTranslucent">true</item>
    </style>



    <!-- 设置ActionBar菜单字体 -->
    <style name="ActionMenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/action_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>


    <!--图库界面的主题-->
    <style name="PhotoPickerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/photopicker_background</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTextStyle</item>
        <!--<item name="actionBarTheme">@style/actionBarTheme</item>-->
        <!--<item name="actionBarPopupTheme">@style/actionBarPopupTheme</item>-->
    </style>



    <style name="text_black_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h16</item>
    </style>


    <!--  从下到上显示popWindow-->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>


    <!--  从上到下显示的popWindow-->
    <style name="mypopwindow_anim_style_up_to_down">
        <item name="android:windowEnterAnimation">@anim/popshow_anim_up_to_down</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim_up_to_down</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!--BaseDialog的样式-->
       <style name="dialog_no_frame" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/full_alpha</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!--修改android.support.design.widget.TabLayout中显示文字的大小 -->
    <style name="design_widget_TabLayout_TextStyle">
        <item name="android:textSize">14sp</item>
    </style>


    <!--RadioButton的样式 -->
    <style name="rb_bottom_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/radio_select_color</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:background">#ffffff</item>
    </style>






    <style name="bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>



    <!-- 列表用户头像的样式 -->
    <style name="UserPortraitStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@mipmap/img_header</item>
    </style>

    <style name="project_list_someinfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="project_detail_btn_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dip</item>
    </style>

    <style name="project_detail_btn_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginBottom">1dip</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

<!--提交表单的演示-->
    <style name="text_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h18</item>
    </style>
    <style name="text_red_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/h16</item>
    </style>
    <style name="text_red_small2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/h14</item>
    </style>

    <style name="text_red_smaller">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/h12</item>
    </style>

    <style name="DialogQrCodeStyle" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>



    <style name="PopupAnimation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="PopupAnimationSlide" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="@android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="style_timepicker_big">
        <item name="android:textSize">@dimen/h16</item>
    </style>

    <style name="style_timepicker_small">
        <item name="android:textSize">@dimen/h13</item>
    </style>

    <style name="text_gray_dark_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_gray_dark</item>
        <item name="android:textSize">@dimen/h14</item>
    </style>

    <style name="et_bg_gray_boader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/h35</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/h6</item>
        <item name="android:layout_marginLeft">@dimen/h20</item>
        <item name="android:layout_marginRight">@dimen/h20</item>
        <item name="android:background">@drawable/gray_boder</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h16</item>
    </style>

    <style name="btn_water_blue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/h40</item>
        <item name="android:background">@drawable/btn_blue_round</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h20</item>
    </style>
    <style name="text_gray_light_smallest">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/h12</item>
    </style>

</resources>
